{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section id="prices" class="parallax">
    <div class="col-md-6 offset-md-3 offset-md-1 col-sm-10 col-12 text-center py-4 my-4 formBox">
        <h2 class="text-dark">Connexion</h2>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-4" required autofocus placeholder="E-mail">
    <input type="password" name="password" id="inputPassword" class="form-control my-4" required placeholder="Mot de passe">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-dark  my-4" type="submit">
        Sign in
    </button>
</form>
    </div>
</section>
{% endblock %}
