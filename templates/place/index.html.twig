{% extends 'base.html.twig' %}

{% block title %}Place index{% endblock %}

{% block body %}
    <h1>Place index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateEvent</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>Lattitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.id }}</td>
                <td>{{ place.dateEvent ? place.dateEvent|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ place.address1 }}</td>
                <td>{{ place.address2 }}</td>
                <td>{{ place.zipCode }}</td>
                <td>{{ place.city }}</td>
                <td>{{ place.lattitude }}</td>
                <td>{{ place.longitude }}</td>
                <td>
                    <a href="{{ path('place_show', {'id': place.id}) }}">show</a>
                    <a href="{{ path('place_edit', {'id': place.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('place_new') }}">Create new</a>
{% endblock %}
